.bg {
  width: 750rpx;
  height: 422rpx;
  background-color: #ccc;
  position: relative;
}
.doctor-detail {
  width: 750rpx;
  height: 700rpx;
  background: linear-gradient(180deg, #E1EEFF 0%, #FBFDFF 92%, #F5F7FA 100%);
  border-radius: 24rpx 24rpx 0rpx 0rpx;
  position: absolute;
  top: 106rpx;
  padding: 16rpx 30rpx 30rpx 30rpx;
}
.doctor-detail .doctor-info .info {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  position: absolute;
  left: 190rpx;
}
.doctor-detail .doctor-info .info .name-title {
  display: flex;
}
.doctor-detail .doctor-info .info .name-title .name {
  font-size: 36rpx;
  font-weight: 800;
  color: #323233;
}
.doctor-detail .doctor-info .info .name-title .title {
  margin-top: 6rpx;
  margin-left: 20rpx;
}
.doctor-detail .doctor-info .info .department {
  margin-top: 8rpx;
}
.doctor-detail .doctor-info .avatar {
  width: 140rpx;
  height: 140rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
  position: absolute;
  top: -30rpx;
}
.doctor-detail .introduction {
  width: 690rpx;
  height: 520rpx;
  padding: 30rpx;
  position: absolute;
  top: 144rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}
.doctor-detail .introduction .specialize {
  line-height: 40rpx;
}
.doctor-detail .introduction .time-available {
  display: flex;
  margin-top: 12rpx;
}
.doctor-detail .introduction .online-time {
  margin-top: 30rpx;
}
.doctor-detail .introduction .offline-time {
  margin-top: 30rpx;
}
.service-content {
  width: 690rpx;
  height: 374rpx;
  position: absolute;
  top: 800rpx;
  left: 30rpx;
  padding: 30rpx 18rpx 30rpx 30rpx;
  font-size: 36rpx;
  font-weight: 800;
  color: #333333;
}
.service-content .content {
  display: flex;
  font-size: 32rpx;
  font-weight: 800;
  color: #333333;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.service-content .content van-image {
  margin-right: 16rpx;
}
.service-content .content .content-text {
  display: flex;
  flex-direction: column;
}
.service-content .content .content-text .text-detail {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
}
.service-content .content button {
  width: 144rpx;
  height: 64rpx;
  font-size: 28rpx;
  line-height: 64rpx;
  font-weight: 400;
  color: #FFFFFF;
  background: #0075FF;
  border-radius: 32rpx 32rpx 32rpx 32rpx;
  margin-right: 0;
}
