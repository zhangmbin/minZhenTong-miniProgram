.content {
  padding-left: 30rpx;
}
.nav-bar {
  background: #2186FD !important;
  color: #fff !important;
}
.van-image__error,
.van-image__img,
.van-image__loading {
  border-radius: 24rpx;
}
.user-content {
  margin-top: 20rpx;
  width: 690rpx;
  height: 312rpx;
  position: relative;
}
.user-content .user-relatives {
  display: flex;
  width: 100%;
  height: 266rpx;
  color: #0075FF;
  font-size: 30rpx;
  background: #fff;
}
.user-content .user-relatives text {
  margin-top: 16rpx;
}
.user-content .user-info {
  width: 100%;
  height: 236rpx;
  position: absolute;
  top: 82rpx;
  left: 0;
  font-size: 30rpx;
  color: #fff;
  background: #2186FD;
  padding: 36rpx 36rpx;
}
.user-content .user-info .user {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.user-content .user-info .user .name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.user-content .user-info .user .id,
.user-content .user-info .user .phone {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.user-content .user-info .qr-code {
  width: 144rpx;
  height: 176rpx;
  position: absolute;
  top: 36rpx;
  right: 36rpx;
  font-size: 20rpx;
  color: #434F5D;
  border-radius: 8rpx;
  background-color: #D5E9FF;
}
.user-content .user-info .qr-code .qr-image {
  width: 144rpx;
  height: 132rpx;
  padding: 10rpx 16rpx;
  border-radius: 8rpx;
  background-color: #fff;
}
.user-content .user-info .qr-code .qr-info {
  width: 100%;
  margin: 8rpx 22rpx 8rpx;
}
.functional-card {
  width: 690rpx;
  height: 200rpx;
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx 16rpx;
  display: flex;
}
.functional-card .appointment-register {
  margin-right: 22rpx;
  background-color: #FFF5E0;
}
.functional-card .online-consultation {
  background-color: #CEE9FB;
}
.functional-card .appointment-register,
.functional-card .online-consultation {
  width: 318rpx;
  height: 160rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.functional-card .appointment-register van-image,
.functional-card .online-consultation van-image {
  position: absolute;
  width: 100%;
}
.functional-card .appointment-register .top,
.functional-card .online-consultation .top {
  font-size: 36rpx;
  font-weight: Bold;
  color: #333;
  line-height: 44rpx;
  margin-top: 24rpx;
  margin-left: 28rpx;
  z-index: 1;
}
.functional-card .appointment-register .low,
.functional-card .online-consultation .low {
  font-size: 26rpx;
  color: #999;
  line-height: 44rpx;
  margin-left: 28rpx;
  z-index: 1;
}
swiper {
  width: 100%;
  height: 176rpx;
  margin-top: 30rpx;
  position: relative;
}
swiper .wx-swiper-dot {
  width: 10rpx;
  height: 6rpx;
  border-radius: 10rpx 10rpx 10rpx 10rpx !important;
  background: #D3D7DB !important;
}
swiper .wx-swiper-dot-active {
  width: 16rpx;
  height: 6rpx;
  border-radius: 10rpx 10rpx 10rpx 10rpx !important;
  background: #0075FF !important;
}
.information-message {
  width: 690rpx;
  background: #fff;
  margin-top: 20rpx;
  padding: 24rpx 32rpx 42rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.information-message .header {
  height: 90rpx;
  font-size: 36rpx;
  font-weight: heavy;
  color: #333;
}
.information-message .news-content {
  display: flex;
  flex-direction: column;
}
.information-message .news-content .news {
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}
.information-message .news-content .news .news-box {
  display: flex;
  margin-bottom: 30rpx;
}
.information-message .news-content .news .news-box .news-text {
  width: 396rpx;
  height: 158rpx;
  margin-left: 40rpx;
  position: relative;
}
.information-message .news-content .news .news-box .news-text .title {
  height: 94rpx;
  font-size: 36rpx;
  font-weight: medium;
  color: #333;
  margin-bottom: 24rpx;
}
.information-message .news-content .news .news-box .news-text .news-date {
  height: 40rpx;
  font-size: 28rpx;
  color: #666;
}
.information-message .news-content .news van-divider {
  height: 2rpx;
}
