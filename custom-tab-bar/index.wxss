.tab-bar {
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  background: #FFFFFF;
  box-shadow: 0rpx -6rpx 12rpx 2rpx rgba(204,204,204,0.15);
  border-radius: 0rpx 0rpx 0rpx 0rpx;
  opacity: 1;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-view {
  font-size: 24rpx;
}
.tab-bar-item cover-image {
  height: 44rpx;
  width: 44rpx;
}