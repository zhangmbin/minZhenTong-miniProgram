.btn-submit {
  margin-top: 30rpx;
  padding: 30rpx 30rpx 0 30rpx;
  /* background-color: #fff; */
}
.btn-submit button {
  width: 690rpx;
  height: 88rpx;
  background: #0075FF;
  color: #fff;
  font-size: 32rpx;
  font-family: PingFang SC-Bold, PingFang SC;
  font-weight: bold;
  border-radius: 60rpx;
  box-shadow: 0rpx 10rpx 20rpx 2rpx rgba(63, 134, 255, 0.15);
}

.btn-submit .disable-btn{
  background: #BED6FF;
}